<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyoutPageSample.MainPage"
             FlyoutLayoutBehavior="Split"
            >
    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout" BackgroundColor="Red">
            <Label Text="Flyout Text"
                   FontSize="Large"
                   TextColor="White"/>
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage Title="Detail" BackgroundColor="Blue">
            <Label Text="Detail Text"
                   FontSize="Large"
                   TextColor="White"/>
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>
